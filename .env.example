# ==============================================
# VOCH Platform Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env files to version control!
# ==============================================

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME=VOCH
APP_URL=http://localhost:3000

# ==============================================
# DATABASE - PostgreSQL
# ==============================================
DATABASE_URL=postgresql://voch_user:voch_password@localhost:5432/voch_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=voch_user
DB_PASSWORD=voch_password
DB_NAME=voch_db

# ==============================================
# REDIS CACHE
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ==============================================
# MONGODB (For voice recordings & analytics)
# ==============================================
MONGODB_URI=mongodb://localhost:27017/voch_voice
MONGODB_DATABASE=voch_voice

# ==============================================
# AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Password hashing
BCRYPT_ROUNDS=10

# ==============================================
# EMAIL SERVICE (SendGrid/SMTP)
# ==============================================
MAIL_SERVICE=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@voch.com

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ==============================================
# FILE STORAGE (AWS S3 / Cloudinary)
# ==============================================
# AWS S3
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=voch-uploads

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==============================================
# VOICE RECOGNITION & AI
# ==============================================
# Google Cloud Speech-to-Text
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# OpenAI (for content moderation)
OPENAI_API_KEY=your-openai-api-key

# Bhashini API (Indian language support)
BHASHINI_API_KEY=your-bhashini-api-key
BHASHINI_USER_ID=your-bhashini-user-id

# ==============================================
# PAYMENT GATEWAY (Razorpay)
# ==============================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# ==============================================
# SOCIAL AUTHENTICATION
# ==============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# ==============================================
# WEBSOCKET / REAL-TIME
# ==============================================
WS_PORT=3001
WS_PATH=/socket.io
CORS_ORIGIN=http://localhost:3000

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# ==============================================
# FRONTEND URLs
# ==============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_ADMIN_URL=http://localhost:3000/admin

# ==============================================
# NOTIFICATION SERVICES
# ==============================================
# Firebase Cloud Messaging
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# CRON JOBS & BACKGROUND TASKS
# ==============================================
ENABLE_CRON_JOBS=true
BADGE_CALCULATION_CRON=0 0 * * *
STREAK_CHECK_CRON=0 1 * * *

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_VOICE_POSTS=true
ENABLE_POLLS=true
ENABLE_FUNDRAISING=true
ENABLE_GAMIFICATION=true
ENABLE_AI_MODERATION=true

# ==============================================
# SECURITY
# ==============================================
CSRF_SECRET=your-csrf-secret
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-encryption-key-32-chars
