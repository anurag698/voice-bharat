# VOCH Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Authentication
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key-change-in-production

# OAuth Providers
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Feature Flags
NEXT_PUBLIC_ENABLE_REELS=true
NEXT_PUBLIC_ENABLE_POLLS=true
NEXT_PUBLIC_ENABLE_FUNDRAISERS=true
NEXT_PUBLIC_ENABLE_MESSAGING=true

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Environment
NODE_ENV=development
